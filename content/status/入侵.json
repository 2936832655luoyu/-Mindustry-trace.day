{
	// 状态效果名称：入侵
	"name": "入侵",  // 改为英文标识符，符合Mindustry命名规范
	
	// 效果颜色：FF6B6B（红色）- 表示入侵和破坏性的视觉效果
	"color": "FF6B6B",
	
	// 伤害值：每秒对目标造成的持续伤害
	"damage": 0.43,
	
	// 速度倍率：使目标移动速度降低到70%，显著减缓敌人行动
	"speedMultiplier": 0.7,  // 修正为原描述中的0.7
	
	// 防御倍率：使目标防御力降低到80%
	"armorMultiplier": 0.8,  // 修正为正确字段armorMultiplier（原healthMultiplier是生命值倍率）
	
	// 效果触发几率：每次攻击时触发此状态效果的概率
	"statusChance": 0.25,  // 修正为正确字段statusChance（原effectChance不符合规范）
	
	// 效果持续时间：状态效果持续的时间长度（帧）
	"duration": 300,

	// 视觉效果定义：入侵状态生效时显示的粒子效果
	"effect": {
		"type": "ParticleEffect",     // 效果类型：粒子效果
		"particles": 12,              // 增加粒子数量，增强视觉冲击
		"baseLength": 8,              // 增加基础长度
		"length": 60,                 // 增加效果长度
		"lifetime": 15,               // 延长粒子生命周期
		"spin": 6,                    // 提高旋转速度，增强侵略感
		"interp": "pow5Out",          // 插值方式：五次方缓出
		"sizeFrom": 5,                // 增大起始大小
		"sizeTo": 1,                  // 保留轻微结束大小，避免突兀消失
		"colorFrom": "FF6B6B",        // 起始颜色：红色
		"colorTo": "800000"           // 结束颜色：深暗红色，增强层次感
	},

	// 特殊效果：入侵成功时触发的额外效果
	"behaviors": [  // 修正为正确字段behaviors（Mindustry中用此数组定义行为）
		{
			"type": "StatusEffectSpread",  // 修正为正确的传播效果类型
			"range": 10,                  // 传播范围：10单位
			"chance": 0.3,                // 传播几率：30%
			"effect": "invade"            // 传播的效果：使用英文标识符
		}
	]
}