{
    // 禁用该区域的动态光照效果，使场景亮度保持恒定
    "noLighting": true,
    // 允许玩家在该区域使用蓝图发射功能（快速部署建筑布局）
    "allowLaunchSchematics": true,
    // 玩家首次进入该区域时自动发放初始物品包
    "addStartingItems": true,
    // 覆盖游戏默认的蓝图发射参数（如初始资源、部署限制等）
    "overrideLaunchDefaults": true,
    // 区域在游戏中显示的本地化名称
    "localizedName": "峡谷",
    // 区域的背景描述文本，支持颜色标签
    "description": "我们在探索的过程中发现了敌人的[red]前哨站与古老的发电站，\n[blue]研究发电站的科技并摧毁敌人的前哨站。",
    // 该区域所属的星球（需与星球配置文件名称一致）
    "planet": "痕迹星",
    // 区域在星球上的扇区编号（用于地图定位）
    "sector": 2,
    // 玩家需要击败第10波敌人才能占领该区域
    "captureWave": 10,
    // 区域难度系数（1为基础难度）
    "difficulty": 1,

    // 解锁条件：必须先占领"降落地"才能解锁当前区域
    "research": {  // 该区域的解锁研究配置（通过完成前置目标解锁）
        "parent": "降落点",  // 研究树中的父节点（通常指前置区域的ID，此处为"groundZero"）
        "objectives": [  // 解锁该区域需要完成的目标列表
            {
                "type": "SectorComplete",  // 目标类型：完成指定区块（占领指定扇区）
                "preset": "降落点"  // 具体目标：需要先完成（占领）"groundZero"区块
            }
        ]
    }
}