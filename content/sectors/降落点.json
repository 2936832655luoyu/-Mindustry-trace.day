{
    // 禁用该区域的光照效果，使场景保持恒定亮度
    "noLighting": true,
    // 允许在该区域发射蓝图（用于部署建筑布局）
    "allowLaunchSchematics": true,
    // 玩家进入该区域时自动添加初始物品
    "addStartingItems": true,
    // 是否始终解锁（true = 无需研究即可使用）
    "alwaysUnlocked": true,
    // 覆盖默认的发射参数设置
    "overrideLaunchDefaults": true,
    // 区域的本地化名称（在游戏中显示的名称）
    "localizedName": "降落点",
    // 区域的描述文本，向玩家介绍该区域背景
    "description": "我们降落在一颗[blue]陌生的星球上，\n[red]开始搜寻附近的矿物，敌人的侦察部队发现了我们，击退他们！",
    // 该区域所属的星球
    "planet": "痕迹星",
    // 区域在星球上的扇区编号
    "sector": 1,
    // 占领该区域所需击败的波次（0表示无需击败敌人即可占领）
    "captureWave": 2,
    // 区域难度系数（1为基础难度）
    "difficulty": 1,
    // 解锁该区域需要完成的研究项目
    "research": "燥热"
}