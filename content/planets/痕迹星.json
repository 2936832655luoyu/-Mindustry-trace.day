{
  // 基础功能开关（控制星球核心玩法逻辑，遵循原版默认规则）
  "prebuildBase": false, // 是否预设基地：false = 玩家手动建造（原版标准模式）
  "allowWaves": true, // 启用敌人波次攻击：true = 定期触发敌人进攻（核心战斗机制）
  "allowWaveSimulation": true, // 允许波次模拟：可提前预览未来波次敌人配置（原版策略辅助功能）
  "enemyCoreSpawnReplace": true, // 敌人核心生成时替换地形：避免核心卡在地形中（优化生成逻辑）
  "defaultCore": "燥热", // 星球默认初始核心类型：影响玩家落地时的核心属性（自定义核心需确保模组已添加）
  "allowLaunchSchematics": true, // 允许跨星球发射蓝图：支持从其他星球导入建造蓝图（原版星系联动功能）
  "allowLaunchLoadout": true, // 允许跨星球发射装备配置：支持导入单位/武器配置（星系资源共享机制）
  "visible": true, // 星球在星系地图可见：true = 玩家可在星系图中看到并选择该星球
  "bloom": true, // 启用泛光效果：增强大气和高光视觉表现（原版视觉优化）
  "clearSectorOnLose": false, // 失败时不清除扇区数据：保留已建造内容，方便重试（原版人性化设计）
  "tidalLock": false, // 禁用潮汐锁定：星球会自转，存在昼夜交替（true = 一面永久朝恒星，无昼夜）

  // 本地化与身份标识（定义星球在游戏内的显示信息和生成逻辑）
  "localizedName": "痕迹星", // 星球在游戏内的显示名称（支持多语言本地化）
  "generator": "DefaultPlanetGenerator", // 采用原版默认星球生成器：确保地形生成逻辑与原版一致

  // 视觉与轨道参数（控制星球在星系地图和地表的视觉表现）
  "iconColor": "0099CCFF", // 星系地图中星球图标的颜色（天蓝色，RGBA格式，与原版色调统一）
  "orbitRadius": 71, // 星球绕恒星的轨道半径：70为原版常见值，确保星系中轨道分布合理
  "hasAtmosphere": true, // 启用大气层渲染：星球表面会有大气雾化效果（原版视觉核心特征）
  "updateLighting": true, // 启用光照动态更新：随自转/公转变化亮度，模拟昼夜光影变化
  "atmosphereRadIn": 0.05, // 大气层内层半径：控制大气厚度（原版比例，数值越大大气越厚）
  "atmosphereRadOut": 0.1, // 大气层外层半径：控制大气扩散范围（与内层配合形成渐变过渡）
  "drawOrbit": true, // 在星系地图中绘制轨道线：直观展示星球运行轨迹
  "orbitColor": "00CCFFFF", // 轨道线颜色：与大气色呼应，保持视觉一致性

  // 游戏性规则（定义星球的交互逻辑和限制）
  "accessible": true, // 星球可访问：true = 玩家可选择该星球进行游戏（基础访问权限）
  "alwaysUnlocked": true, // 非初始解锁星球：需完成前置条件（如探索其他星球）才能解锁（原版进度机制）
  "sectorSeed": 1, // 扇区生成随机种子：相同种子生成相同地形布局，便于测试和复现
  "startSector": 1, // 玩家初始进入的扇区编号：0为星球默认起始点（扇区是星球内的分区单位）
  "sectorSize": 3, // 单个扇区尺寸：数值越大，扇区地图范围越广（原版标准尺寸）
  "allowSectorInvasion": true, // 允许敌人入侵扇区：敌人会主动进攻玩家基地（增强挑战性）
  "allowLaunchToNumbered": false, // 禁用向编号扇区发射资源：仅允许向已探索扇区发射（防止滥用）

  // 物理尺寸参数（控制星球的基础大小和轨道关系）
  "radius": 1.2, // 越小他实际变大，星球半径：5为原版标准值（5~8区间适配原版比例，过大会导致渲染压力）
  "orbitSpacing": 2, // 轨道间距：控制与其他星球的轨道距离，避免轨道重叠（原版星系布局优化）

  // 云层网格配置（控制大气层中云层的视觉效果和运动逻辑）
  "cloudMesh": {
    "type": "HexSkyMesh", // 云层网格类型：六边形网格，模拟自然云层结构（原版常用类型）
    "planet": "痕迹星", // 所属星球：与外层localizedName对应
    "seed": 2, // 云层生成种子：控制云层分布图案（不同种子生成不同云层形状）
    "speed": 0.9, // 云层移动速度：0.3为原版适中值，模拟大气流动（数值越小移动越慢）
    "radius": 0.1, // 云层覆盖半径：相对星球半径的比例（0.1适配原版云层覆盖范围）
    "divisions": 6, // 云层网格分割数：5为原版低细节值，平衡视觉和性能（数值越高细节越多）
    "color": "00CCFFFF", // 云层颜色：与大气层同色系，天蓝色带透明度
    "octaves": 2, // 噪声层次：控制云层纹理复杂度（2层为原版基础复杂度）
    "persistence": 1.5, // 噪声持续性：影响云层纹理的连贯性（数值越高纹理越连贯）
    "scl": 1, // 噪声缩放：控制云层纹理大小（1为原版标准比例）
    "thresh": 0.0001 // 云层生成阈值：数值越高，云层覆盖率越低（0.02适配原版中等云层密度）
  },

  // 地形网格配置（控制星球表面地形的形态、颜色和复杂度）
  "mesh": {
    "type": "NoiseMesh", // 地形生成类型：噪声算法生成，模拟自然地形起伏（原版默认类型）
    "planet": "痕迹星", // 所属星球：与外层名称对应
    "seed": 10, // 地形生成种子：控制山脉、平原分布（不同种子生成不同地形布局）
    "color1": "006699FF", // 主地形颜色：深灰蓝色，用于低海拔区域（原版常见地形色）
    "color2": "0099CCFF", // 次地形颜色：浅灰蓝色，用于高海拔/山脉区域（与主色形成渐变）
    "divisions": 4, // 地形网格分割数：4为原版安全值，控制顶点数量（避免超过80000上限导致崩溃）
    "radius": 1, // 地形半径比例：相对于星球半径的比例（1为完整覆盖星球）
    "octaves": 2, // 噪声层次：2层为原版基础复杂度（数值越高地形越复杂）
    "persistence": 1, // 噪声持续性：影响地形特征的连贯性（1为中等连贯性）
    "scale": 4, // 噪声缩放：4为原版适中值，控制地形起伏的范围（数值越大地形越平缓）
    "mag": 1 // 地形幅度：控制地形高低差（1为原版标准幅度，避免极端高低差）
  },

  // 天体关系配置（定义星球在星系中的位置和所属系统）
  "parent": "sun", // 父级天体：绕太阳运行（属于太阳系结构）
  "solarSystem": "sun", // 所属太阳系：明确星球在星系中的归属（原版星系结构）

  // 资源限制配置（控制星球上不生成的资源类型，可根据需求补充）
  // 示例："hiddenItems": ["beryllium", "tungsten"] 表示不生成铍和钨
  // 此处留空表示默认生成所有基础资源（根据模组需求添加限制）
  
}