{
  "name": "恒温",
  "displayName": "恒温",
  "description": "这是核心机啦",
  "details": "降降温，不要太热了",

  // 单位基础属性（核心机必开）
  "coreUnitDock": true,
  "mineSpeed": 10,
  "mineTier": 2,
  "buildSpeed": 2,
  "speed": 5,
  "drag": 0.05,
  "accel": 0.05,
  "rotateSpeed": 5,
  "health": 400,
  "targetGround": true,
  "targetAir": true,
  "research": "燥热",

  // 物理参数（碰撞、引擎偏移等）
  "engineOffset": 8,
  "engineSize": 3,
  "hitSize": 20,

  // 功能参数（载货、飞行等）
  "type": "payload",
  "payloadCapacity": 256,
  "range": 200,
  "ammoCapacity": 140,
  "flying": true,
  "itemCapacity": 100,

  // 引擎配置（关键：补充粒子/拖尾特效）
  "engines": [
    {
      "x": 0,
      "y": -8,
      "radius": 3,
      "rotation": 180,
      // 引擎粒子特效（Mindustry 原生粒子写法）
      "effect": {
        "type": "particle",
        "color": "87ceeb",   // 天蓝色粒子
        "size": 2,           // 粒子大小
        "amount": 8,         // 每次引擎喷射的粒子数
        "lifetime": 40,      // 粒子存活时间
        "speed": 1.2,        // 粒子速度
        "alphaMultiplier": 0.8 // 粒子透明度
      },
      // 引擎拖尾（用 statusEffect 模拟持续拖尾）
      "statusEffect": {
        "type": "拖尾",
        "color": "87ceeb",
        "length": 12,        // 拖尾段数
        "fade": 0.05,        // 拖尾衰减
        "spacing": 1.5       // 拖尾间距
      }
    }
  ],

  // 特殊能力（仅保留修复场）
  "abilities": [
    {
      "type": "RepairFieldAbility",
      "range": 30,
      "amount": 40,
      "reload": 120
    }
  ],

  // 武器系统（保留子弹拖尾）
  "weapons": [
    {
      "name": "水枪？",
      "x": 4,
      "y": 4.5,
      "shootY": 4,
      "top": true,
      "rotate": false,
      "reload": 5,
      "shootSound": "pew",
      "ejectEffect": "casing1",
      "inaccuracy": 0,
      "alternate": true,
      "ignoreRotation": false,
      "layerOffset": -0.01,
      "bullet": {
        "buildingDamageMultiplier": 0.01,
        "speed": 6,
        "lifetime": 50,
        "damage": 30,
        "width": 7,
        "shrinkY": 0,
        "height": 7,
        // 子弹拖尾特效（紫红渐变）
        "trailEffect": {
          "type": "trail",
          "length": 10,
          "width": 3,
          "colorFrom": "8a2be2",
          "colorTo": "ff6347",
          "lifetime": 20
        }
      }
    }
  ]
}