{
  // 单位类型：机械单位（机甲）
  "type": "mech",
  // 单位名称：重霆（显示在游戏内的名称）
  "name": "重霆",
  // 单位描述：游戏内显示的说明文本
  "description": "T3陆军，不知道怎么用啊！！！！1",
  // 单位生命值
  "health": 3200,
  // 是否始终解锁：true表示无需研究即可使用
  "alwaysUnlocked": true,
  // 解锁所需研究项目："重金"（需与研究树配置对应）
  "research": "重金",
  // 单位护甲值（影响受到的伤害减免）
  "armor": 8,
  // 移动速度（数值越小移动越慢）
  "speed": 0.5,
  // 是否为飞行单位：false表示地面单位
  "flying": false,
  // 是否为悬浮单位：false表示普通地面单位
  "hover": false,
  // 碰撞体积大小（影响攻击命中判定）
  "hitSize": 18,
  // 物品携带容量
  "itemCapacity": 40,

  // 武器插槽配置：控制武器贴图显示位置和样式（雷枪左挪3像素，雷炮右挪3像素）
  "weaponSlots": [
    {
      // 关联的武器名称（雷枪）
      "weapon": "雷枪",
      // X轴偏移：原-10向左挪3像素，改为-13（负值越大越靠左）
      "x": -15,
      // Y轴偏移：中间位置（保持不变）
      "y": 0,
      // 初始旋转角度（保持不变）
      "rotation": 0,
      // 水平镜像显示（保持不变）
      "mirror": true,
      // 贴图缩放比例（保持不变）
      "scale": 1.2,
      // 随武器朝向旋转（保持不变）
      "drawRotated": true
    },
    {
      // 关联的武器名称（雷炮）
      "weapon": "雷炮",
      // X轴偏移：原0向右挪3像素，改为3（正值越大越靠右）
      "x": 0,
      // Y轴偏移：单位主体上方（负值向上，保持不变）
      "y": -12,
      // 初始旋转角度：0度（水平向右，可根据贴图方向调整）
      "rotation": 0,
      // 不启用镜像（保持不变）
      "mirror": false,
      // 雷炮贴图缩放比例（略大于雷枪以突出显示）
      "scale": 1.6,
      // 雷炮固定朝向（保持不变）
      "drawRotated": false,
      // 图层优先级：值越高越靠上（确保显示在单位主体上方）
      "layer": 10
    }
  ],

  // 武器属性配置：定义武器的攻击特性（发射点同步偏移，与贴图位置匹配）
  "weapons": [
    {
      // 雷枪武器名称（与weaponSlots关联）
      "name": "雷枪",
      //  reload时间（帧）：保持不变
      "reload": 3,
      // 发射点X轴偏移：与雷枪贴图X轴一致，原-10改为-13（左挪3像素）
      "x": -15,
      // 发射点Y轴偏移：与雷枪贴图Y轴一致（保持不变）
      "y": 0,
      // 弹壳弹出效果（保持不变）
      "ejectEffect": "casing1",
      // 子弹配置（保持不变）
      "bullet": {
        "type": "BasicBulletType",
        "damage": 45,
        "speed": 7,
        "width": 9,
        "height": 14,
        "lifetime": 40,
        "shootEffect": "shootBig",
        "smokeEffect": "shootBigSmoke",
        "ammoMultiplier": 2,
        "color": "FF3333FF"
      }
    },
    {
      // 雷炮武器名称（与weaponSlots关联）
      "name": "雷炮",
      //  reload时间（帧）：保持不变
      "reload": 60,
      // 发射点X轴偏移：与雷炮贴图X轴一致，原0改为3（右挪3像素）
      "x": 0,
      // 发射点Y轴偏移：与雷炮贴图Y轴一致（保持不变）
      "y": -12,
      // 发射音效（保持不变）
      "shootSound": "missile",
      // 子弹配置（保持不变）
      "bullet": {
        "type": "MissileBulletType",
        "damage": 300,
        "splashDamage": 150,
        "splashDamageRadius": 40,
        "speed": 4,
        "lifetime": 60,
        "width": 10,
        "height": 15,
        "frontColor": "FF9900FF",
        "backColor": "FF5500FF",
        "homingRange": 60,
        "homingPower": 0.1,
        "trailEffect": "missileTrail",
        "shootEffect": "shootBig",
        "hitEffect": "blastExplosion",
        "smokeEffect": "shootBigSmoke"
      }
    }
  ],

  // 单位技能配置（保持不变）
  "abilities": [
    {
      "type": "ForceFieldAbility",
      "range": 40,
      "max": 1200,
      "reload": 15,
      "cooldown": 180
    },
    {
      "type": "RepairFieldAbility",
      "range": 35,
      "amount": 60,
      "reload": 90
    }
  ],

  // 引擎特效配置（保持不变）
  "engineOffset": 9,
  "engineSize": 4.5,
  "engineColor": "FF6600FF"
}