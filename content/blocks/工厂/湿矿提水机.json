{
    "type": "GenericCrafter",  // 建筑类型标识，表明是通用制造机（GenericCrafter），游戏据此加载对应逻辑（如制造流程、交互规则等）
    "name": "被动式湿矿提水机",  // 建筑在游戏内显示的名称，用于玩家识别、选择
    "description": "利用环境温差自然蒸发遗湿矿中的水分，冷凝后收集为可用水，无需电力驱动",  // 建筑功能描述，向玩家说明其工作原理与核心特性
    "health": 1000,  // 建筑的生命值，承受伤害的上限，归 0 时建筑被摧毁
    "itemCapacity": 50,  // 建筑可存储物品（输入原料、产出物品等）的最大容量，这里用于存放“遗湿矿”原料
    "outputLiquid": "water/1.5",  // 每次制造完成后输出的液体及数量，格式为“液体类型/数量”，即产出 1.5 单位水
    "size": 2,  // 建筑在地图上占用的格子尺寸，“2”代表 2×2 大小的区域
    "hasPower": false,  // 标记建筑是否需要电力驱动，false 表示无需电力，符合“被动式”设定
    "hasItems": true,  // 标记建筑是否需要处理物品（输入原料、输出产物等），true 表示需要，用于加工“遗湿矿”
    "hasLiquid": true,  // 标记建筑是否涉及液体处理（输入液体、输出液体等），true 表示支持液体输出（如产出水）
    "liquidCapacity": 800,  // 建筑可存储液体（产出的水等）的最大容量
    "craftTime": 90,  // 完成一次制造流程所需的时间（单位通常为游戏 ticks），决定生产效率
    "consumes": {  // 制造过程中的消耗配置，定义生产时需要的原料
        "items": [  // 物品消耗列表
            {
                "item": "遗湿矿",  // 消耗的物品类型为“遗湿矿”
                "amount": 2  // 每次生产消耗 2 单位“遗湿矿”
            }
        ]
    },
    "requirements": [  // 建筑建造所需的材料列表，满足这些材料才能在游戏内建造该建筑
        { "item": "silicon", "amount": 50 },  // 建造需要 50 单位“压缩铜”
        { "item": "压缩铅", "amount": 60 },  // 建造需要 60 单位“压缩铅”
        { "item": "遗湿矿", "amount": 30 }  // 建造需要 30 单位“遗湿矿”
    ],
    "drawer": {  // 建筑外观渲染配置，定义游戏中如何绘制该建筑的视觉表现
        "type": "DrawMulti",  // 采用“多重绘制”方式，组合多个绘制逻辑
        "drawers": [  // 具体的绘制器列表，按 layer 层级顺序绘制
            {
                "type": "DrawRegion",  // 按纹理区域绘制基础外观
                "suffix": "-base",  // 纹理后缀，用于加载对应基础纹理（如建筑的主体贴图）
                "layer": 0  // 绘制层级，0 为基础层，先绘制
            },
            {
                "type": "DrawLiquidTile",  // 绘制液体相关的视觉表现（如产出水的显示）
                "drawLiquid": "water",  // 关联的液体类型为“水”，用于显示对应液体的视觉效果
                "layer": 1  // 绘制层级，在基础层之上
            },
            {
                "type": "DrawDefault",  // 绘制默认内容（通常用于补充基础外观未覆盖的部分或默认特效）
                "layer": 2  // 绘制层级，在液体层之上
            },
            {
                "type": "DrawDefault",  // 绘制物品相关的视觉表现（如原料“遗湿矿”的显示）
               
               
                "layer": 1.5  // 绘制层级，在基础层和液体层之间，让物品显示更合理
            }
        ]
    },
    "buildCostMultiplier": 0.6,  // 建造时间/资源等成本的乘数，0.6 表示建造成本（如时间、资源消耗计算时）乘以 0.6，让建造更“便宜”
    "category": "production",  // 建筑分类，归为“生产”类，用于游戏内建筑分类展示、筛选
    "researchCostMultiplier": 0.02,  // 科技研发成本的乘数，0.2 表示研发该建筑所需科技时，成本（如科研点数）乘以 0.2，降低研发门槛
    "research": "辐动发电机",  // 解锁该建筑所需完成的科技名称，玩家需先研发“辐动发动机”科技才能建造
    
    "activeSound": "dripping",  // 建筑工作时的音效，设置为“dripping”（水滴声），贴合“提水”的功能
    "activeSoundVolume": 1.5  // 工作音效的音量倍数，1.5 表示音效音量为基础音量的 1.5 倍
}