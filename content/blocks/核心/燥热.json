    {
    // 方块类型：核心方块（CoreBlock），用于基地核心功能
    "type": "CoreBlock",
    
    // 核心名称（显示在游戏中的名称）
    "name": "燥热",
    
    // 简短描述（显示在物品信息栏）
    "description": "好累，好热",
    
    // 详细说明（可包含背景设定或特殊功能）
    "details": "不堪重负的，明天，又是明天，燥热！",
    
    // 物品存储容量（核心能存储的资源上限）
    "itemCapacity": 7200,
    
    // 生命值（核心的耐久度，数值越高越难摧毁）
    "health": 15000,
    
    // 单位容量加成（影响可控制的最大单位数量）
    "unitCapModifier": 30,
    
        // 核心视觉颜色配置
    "color": "#e60000", // 核心主体颜色（十六进制色值）
    "lightColor": "#FF77CC", // 核心发光光颜色
    "lightRadius": 15, // 发光范围：数值越大照亮范围越广
    "lightOpacity": 0.9, // 发光透明度：0-1，数值越高越亮
    
    // 核心常驻光环特效（类似天谴炮台的光环）
    "effect": {
        "type": "multiRing", // 特效类型：多重光环
        "persistent": true, // 关键：设为true使光环光环持续显示
        "radius": [5, 10, 17], // 三层光环半径（从内到外依次增大）
        "colors": [
            "#FF55AAFF", // 内层光环颜色（带透明度）
            "#CC449980", // 中层光环颜色
            "#99337740"  // 外层光环颜色（透明度更低）
        ],
        "rotationSpeed": 0.2, // 光环旋转速度：数值越小旋转越慢
        "strokeWidth": 3 // 光环线条粗细
    },
    
    // 核心尺寸（占用的格子大小，3x3）
    "size": 3,
    
    // 建造需求（所需材料及数量）
    "requirements": [
        {
            "item": "遗湿矿",  // 必须使用"暗蓝石"
            "amount": 2000     // 需要2000个
        },
        // 可在此添加更多材料（如钛、硅等）
        {
            "item":"痕迹合金"
            "amount": 2000   
        },
    ],
    
    // 建造可见性（editorOnly = 仅地图编辑器可见，sandboxOnly = 仅沙盒模式）
    "buildVisibility": "sandboxOnly",
    
    // 是否为首个核心（true = 初始解锁的核心）
    "isFirstTier": true,
    
    // 分类（effect = 功能性方块，通常用于核心）
    "category": "effect",
    
    // 关联单位类型（核心生成或控制的单位，这里是"暗蓝姬"）
    "unitType": "恒温",
    
    // 是否始终解锁（true = 无需研究即可使用）
    "alwaysUnlocked": true,
    
    // 研究相关设定
    "research": {
        "root": true,         // 是否为科技树的根节点（起始研究）
        "name": "痕迹星"     // 研究名称
        "planet": "痕迹星"     // 关联的星球（仅在该星球解锁）
    }
}