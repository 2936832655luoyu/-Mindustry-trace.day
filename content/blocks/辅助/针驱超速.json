{
    "name": "针驱超速",  // 设备在游戏中显示的名称
    "description": "超速懂的都懂，不要我介绍了吧[制作这个模组的时候大概是8月16日，最开始两个人做的]",  // 功能描述及制作背景注释
    "type": "OverdriveProjector",  // 设备类型：超速投影仪，用于给范围内建筑提供加速效果
    "health": 675,  
    "researchCostMultiplier": 0.2
    // 设备生命值，承受伤害达到此值会被摧毁
    "size": 2,  // 设备占地面积为2x2格（1格=32x32像素）
    "range": 320,  // 加速效果覆盖范围（单位：像素）
    "useTime": 180,  // 单个加速物品提供的持续时间（单位：帧，60帧=1秒）
    "phaseRangeBoost": 15,  // 相位模式下的范围提升百分比（+15%）
    "speedBoost": 4,  // 加速倍率，4表示提升至400%（原速度×4）
    "hasBoost": false,  // 是否启用强化模式（false表示不启用）
    "consumes": {
        "power": 4  // 每秒电力消耗量（12单位/秒，游戏内电力比例通常为1:60帧）
        // "booster": true  // 注释：是否需要消耗加速物品（当前未启用）
        // "optional": true  // 注释：电力是否为可选消耗（当前未启用）
    },
    "requirements": [  // 建造所需材料及数量
        "silicon/105",  // 硅 235个
        "遗湿矿/245",  // 塑料 245个
        "伸金/180",  // 相位布料 180个
        "copper/500"  // 速度物质 500个（自定义材料）
    ],
    "category": "effect",  // 设备分类：效果类，在特效设施栏显示
    "research": "燥热"  // 解锁所需前置研究：迷你超速装置
}