            "amount": 400
        },
        {
            "item": "silicon",     // 硅
            "amount": 400
        },
        {
            "item": "copper",    // 钛
            "amount": 350
        },
        {
            "item": "遗湿矿",  // 塑料合金
            "amount": 350
        }
    ],
    // 所属类别：效果类设施（提供护盾效果）
    "category": "effect",
    // 解锁所需研究：力场投射器研究项目
    "research": "针驱超速"
