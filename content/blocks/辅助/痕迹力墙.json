    "radius": 120,
    // 相位模式启用时间：150单位时间
    "phaseUseTime": 150,
    // 相位模式下半径提升比例：30%
    "phaseRadiusBoost": 0.3,
    // 基础电力消耗：8.0单位
    "basePowerDraw": 8.0,
    // 物品储存容量：20单位
